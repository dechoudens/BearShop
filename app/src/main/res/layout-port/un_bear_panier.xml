<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvNomPanier"
            android:layout_marginLeft="0dp"
            android:text="tvNomPanier"
            android:textColor="#000000"
            android:layout_alignTop="@+id/tvTaillePanier"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="tvTaille"
            android:id="@+id/tvTaillePanier"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="108dp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/ckSelectionPanier"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="tvPrix"
            android:id="@+id/tvPrixPanier"
            android:layout_marginLeft="224dp"
            android:textColor="#000000"
            android:layout_marginStart="28dp"
            android:layout_alignTop="@+id/tvTaillePanier"
            android:layout_toEndOf="@+id/tvTaillePanier" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ckSelectionPanier"
            android:checked="false"
            android:layout_marginLeft="315dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginEnd="23dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>